<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".ui.main.PlaceholderFragment">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/seirekiDate"
            android:focusable="false" android:gravity="center"
            android:text="@string/w_date_input"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp" app:layout_constraintVertical_bias="0.375"/>
    <TextView
            android:layout_width="141dp"
            android:layout_height="68dp" android:id="@+id/warekiDate"
            android:text="変換された和暦日付"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/seirekiDate" app:layout_constraintVertical_bias="0.321"/>
</androidx.constraintlayout.widget.ConstraintLayout>